{
  "name": "ebooks-folder-manager",
  "version": "1.0.0",
  "description": "Management tools for your ebooks folder",
  "bin": {
    "efm": "dist/main/cli.mjs",
    "ebooks-folder-manager": "dist/main/cli.mjs"
  },
  "main": "dist/main/index.mjs",
  "scripts": {
    "postinstall": "npm run dedrm:install",
    "dedrm:install": "poetry -P dedrm install",
    "dedrm": "poetry -P dedrm run",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "node --test",
    "test-epub-fixtures": "bin/validate-epub-fixtures",
    "lint": "biome lint",
    "fix": "biome lint --fix"
  },
  "keywords": [
    "ebooks"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "date-fns": "^3.3.1",
    "fast-xml-parser": "^4.3.5",
    "fflate": "^0.8.2",
    "js-logger": "^1.6.1",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "walkdir": "^0.4.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/lodash": "^4.17.15",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.17.7",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
